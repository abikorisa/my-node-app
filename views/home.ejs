<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>BLOG</title>
    <%- include('adobefont'); %>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="/send_url.js"></script>
  </head>
  <body>
    <%- include('header'); %>
    <main>
      <ul class="article--list">
        <% articles.forEach((article) => { %>
        <li class="article--item">
          <% if (article.category === 'limited') {%>
          <i>会員限定</i>
          <% } %>
          <h2><%= article.title %></h2>
          <p><%= article.summary %></p>
          <a href="/article/<%= article.id %>">続きを読む</a>
        </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>
